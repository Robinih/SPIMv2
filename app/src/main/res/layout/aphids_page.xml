<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="16dp"
    android:paddingTop="32dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aphids_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/aphids"
            android:scaleType="centerCrop"
            android:contentDescription="Aphids"
            android:layout_marginBottom="16dp"/>

        <!-- General Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_general_info"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_general_desc"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Life Cycle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_life_cycle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/aphid_lifecycle"
            android:scaleType="centerCrop"
            android:contentDescription="Life cycle of Aphids"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_lifecycle_egg"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_lifecycle_nymph"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_lifecycle_wingless"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_lifecycle_winged"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Biological Controls -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_bio_controls"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_bio_predators"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_bio_parasitoids"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Cultural Practices -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_cultural_practices"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_cultural_sprays"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_cultural_nitrogen"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aphids_cultural_mulch"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Chemical Pesticides (Active Ingredients) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_chemical_pesticides"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8226; Potassium Salts of Fatty Acids (Insecticidal Soap)"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8226; Azadirachtin (Neem Oil)"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8226; Horticultural Oils (Petroleum or plant-based)"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8226; Imidacloprid"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&#8226; Acephate"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>
</ScrollView>
