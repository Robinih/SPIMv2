<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_history_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Severity Bar -->
        <View
            android:id="@+id/severity_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/success_green" />

        <!-- Count Image -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/iv_count_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@color/surface_light"
                tools:src="@drawable/place_holder" />

            <ImageView
                android:id="@+id/iv_sync_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_refresh"
                app:tint="@color/primary_green"
                android:background="@drawable/circle_background"
                android:padding="2dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pest Count Report"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:textAllCaps="true"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_count_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 15, 2024"
                android:textSize="12sp"
                android:textColor="@color/text_hint" />

        </LinearLayout>

        <!-- Count Badge -->
        <TextView
            android:id="@+id/tv_severity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/confidence_badge_background"
            android:text="MED"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="top" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
