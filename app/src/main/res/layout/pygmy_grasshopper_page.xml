<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="16dp"
    android:paddingTop="32dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pygmy"
            android:scaleType="centerCrop"
            android:contentDescription="Pygmy Grasshopper"
            android:layout_marginBottom="16dp"/>

        <!-- General Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_general_info"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_general_desc"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Beneficial Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_beneficial_status"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_beneficial_why"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_beneficial_diet"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_beneficial_note"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"/>

        <!-- Life Cycle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pest_details_life_cycle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary_green"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pygmy_lifecycle"
            android:scaleType="centerCrop"
            android:contentDescription="Life cycle of the Pygmy Grasshopper"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_lifecycle_egg"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_lifecycle_nymph"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pygmy_grasshopper_lifecycle_adult"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>
</ScrollView>
